<ClockLabel@Label>:
    font_size: 120
    size: self.texture_size
    font_name: "../assets/fonts/alarm-clock.ttf"
    # color: 0, 0, 0, 1
    # size: 150, 50
    # background_normal: ''
    # background_down: 'bkgrd-down-color.png'
    # background_color: .88, .88, .88, 1

<TempLabel@Label>:
	font_size: 80
	size: self.texture_size
	font_name: '../assets/fonts/alarm-clock.ttf'

<MinMaxLabel@Label>:
	font_size: 40
	size: self.texture_size
	font_name: '../assets/fonts/alarm-clock.ttf'

<TrainBusLabel@Label>:
	font_size: 30
	size: self.texture_size
	# font_name: '../assets/fonts/alarm-clock.ttf'

<ClockFace>:
	ClockLabel:
		id: clock
    	text: '00:00:00'
    	# pos: root.width / 2 + self.width / 2, 200
    	pos: root.center_x - self.width /2, root.center_y - self.height / 2
    MinMaxLabel:
    	id: mintemp
    	text: '22c'
    	pos: root.center_x * 2 - self.width - 20, 0
    	color: 0.5, 0.5, 0.5, 1
    MinMaxLabel:
    	id: maxtemp
    	text: '22c'
    	pos: root.center_x * 2 - self.width - 20, 0 + mintemp.height
    	color: 0.5, 0.5, 0.5, 1
    TempLabel:
    	id: temp
    	text: '22c'
    	pos: root.center_x * 2 - self.width - mintemp.width - 20, 0
    Image:
    	id: trainimg
    	source: '../assets/images/train.png'
    	size: 200,80
    	pos: root.center_x * 2 - self.width - trainimg.width + 80, root.center_y * 2 - self.height
	Image:
		id: busimg
    	source: '../assets/images/bus.png'
    	size: 200,80
    	pos: root.center_x * 2 - self.width - busimg.width + 80, root.center_y * 2 - self.height * 2
    TrainBusLabel:
    	id: train
    	text: '11 min'
    	pos: root.center_x * 2 - self.width - 20, trainimg.y + 10
    	color: 0.5, 0.5, 0.5, 1
    TrainBusLabel:
    	id: bus
    	text: '19 min'
    	pos: root.center_x * 2 - self.width - 20, busimg.y + 10
    	color: 0.5, 0.5, 0.5, 1